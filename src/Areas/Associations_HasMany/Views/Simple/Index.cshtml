@model List<Ext.Net.MVC.Examples.Areas.Associations_HasMany.Models.User>
@{
    ViewBag.Title = "Simple HasMany Association - Ext.NET MVC Examples";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    var X = Html.X();
}

@section example
{
    <h1>Simple HasMany Association</h1>

    @(X.Model()
        .Name("Product")
        .IDProperty("Id")
        .Fields(
            X.ModelField()
                .Name("Id")
                .Type(ModelFieldType.Int),
            X.ModelField()
                .Name("Name")
                .Type(ModelFieldType.String)
        )
    )

    @(X.Store()
        .ID("Store1")
        .Data(Model)
        .Model(
            X.Model()
            .Name("User")
            .IDProperty("Id")
            .Fields(
                X.ModelField()
                    .Name("Id")
                    .Type(ModelFieldType.Int),
                X.ModelField()
                    .Name("Name")
                    .Type(ModelFieldType.String)
            )
            .Associations(a => a.Add(X.HasManyAssociation()
                .Model("Product")
                .Name("products")
                .AssociationKey("Products")
            ))
        )
    )

    @(X.Panel()
        .Border(false)
        .Width(500)
        .Height(250)
        .LayoutConfig(l => l.Add(new HBoxLayoutConfig { Align = HBoxAlign.Stretch }))
        .Defaults(new { margin = 5 })
        .Items(
            X.GridPanel()
                .StoreID("Store1")
                .Title("Users (select a row to see products)")
                .Flex(1)
                .ColumnModel(X.Column()
                    .Text("Name")
                    .DataIndex("Name")
                    .Flex(1)
                )
                .Listeners(l => l.SelectionChange.Handler = "selected.length && #{ProductsGrid}.bindStore(selected[0].products());"),

            X.GridPanel()
                .ID("ProductsGrid")
                .Title("Products")
                .Flex(1)
                .Store(X.Store().ModelName("Product"))
                .ColumnModel(X.Column()
                    .Text("Name")
                    .DataIndex("Name")
                    .Flex(1)
                )
        )
    )

    <br />

    @(X.GridPanel()
        .StoreID("Store1")
        .Title("Users with RowExpander")
        .Width(500)
        .Height(250)
        .ColumnModel(X.Column()
            .Text("Name")
            .DataIndex("Name")
            .Flex(1)
        )
        .Plugins(
            X.RowExpander()
                .SingleExpand(false)
                .Component(X.GridPanel()
                    .Title("Products")
                    .Store(X.Store().ModelName("Product"))
                    .ColumnModel(
                        X.Column()
                            .Text("Name")
                            .DataIndex("Name")
                            .Flex(1)
                    )
                    .Listeners(l =>
                    {
                        l.ViewReady.Handler = "this.bindStore(this.record.products());";
                        l.ViewReady.Delay = 1;
                    })
                )
        )
    )
}