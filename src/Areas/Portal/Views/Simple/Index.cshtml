                                                    .ID("Portlet7")
                                                    .Title("Another Panel 3")
                                                    .Control(portlet => {
                                                        this.InitPortlet(portlet);
                                                    })
                                            ),

                                        Html.X().PortalColumn()
                                            .Items(
                                                Html.X().Portlet()
                                                    .ID("Portlet8")
                                                    .Title("Panel 2")
                                                    .Icon(Icon.Accept)
                                                    .Control(portlet => {
                                                        this.InitPortlet(portlet);
                                                    }),

                                                Html.X().Portlet()
                                                    .ID("Portlet9")
                                                    .Title("Another Panel 2")
