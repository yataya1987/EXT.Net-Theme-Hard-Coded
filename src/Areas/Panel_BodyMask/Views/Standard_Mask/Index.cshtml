@{
    ViewBag.Title = "LoadMask during Page_Load - Ext.NET MVC Examples";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    var X = Html.X();
}

@section example
{
    <h1>Configure LoadMask for Loader</h1>

    <p>Demonstrates how to configure a LoadMask to render while an external page is loading.</p>

    @(X.Window()
        .ID("Window1")
        .Width(500)
        .Height(470)
        .Title("Example")
        .Closable(false)
        .Loader(X.ComponentLoader()
            .Url("https://www.ext.net")
            .Mode(LoadMode.Frame)
            .LoadMask(lm => {
                lm.ShowMask = true;
                lm.Msg = "Custom Loading Message...";
            })
        )
        .TopBar(X.Toolbar()
            .Items(
                X.ToolbarFill(),

                X.Button()
                    .Text("Load Ext.NET forums")
                    .Icon(Icon.Application)
                    .Handler("#{Window1}.load('https://forums.ext.net');"),

                X.Button()
                    .Text("Refresh")
                    .Icon(Icon.ArrowRotateAnticlockwise)
                    .Handler("#{Window1}.reload();")
            )
        )
    )
}